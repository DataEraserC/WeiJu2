<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeiJu" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/base</item>
        <item name="dividerColor">@color/surface</item>
        <item name="actionOverflowButtonStyle">@style/Widget.WeiJu.ActionButton.Overflow</item>
        <item name="actionOverflowMenuStyle">@style/Widget.WeiJu.PopupMenu</item>
    </style>

    <style name="ShapeAppearanceOverlay.WeiJu.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.WeiJu.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/text</item>
    </style>

    <style name="Widget.WeiJu.PopupMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/surface</item>
    </style>

    <style name="Widget.WeiJu.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/subtle</item>
        <item name="android:indeterminateTintMode">multiply</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>
