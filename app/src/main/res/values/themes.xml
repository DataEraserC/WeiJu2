<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeiJu" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/base</item>
        <item name="android:statusBarColor">@color/base</item>
        <item name="android:navigationBarColor">@color/base</item>
        <item name="dividerColor">@color/surface</item>
        <item name="actionOverflowButtonStyle">@style/Widget.WeiJu.ActionButton.Overflow</item>
        <item name="actionOverflowMenuStyle">@style/Widget.WeiJu.PopupMenu.Overflow</item>
        <item name="android:popupMenuStyle">@style/Widget.WeiJu.PopupMenu</item>
        <item name="android:foregroundTintMode">multiply</item>
        <item name="android:foregroundTint">@color/transparent_80</item>
    </style>

    <style name="ShapeAppearanceOverlay.WeiJu.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.WeiJu.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/text</item>
    </style>

    <style name="Widget.WeiJu.PopupMenu.Overflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="Widget.WeiJu.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="Widget.WeiJu.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/subtle</item>
        <item name="android:indeterminateTintMode">multiply</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TextAppearance.WeiJu.Toolbar.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/jetbrains_mono_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Dialog.WeiJu" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation" >
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

</resources>
