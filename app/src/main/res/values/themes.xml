<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeiJu" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/base</item>
        <item name="android:statusBarColor">@color/base</item>
        <item name="android:navigationBarColor">@color/base</item>
        <item name="dividerColor">@color/surface</item>
        <item name="colorAccent">@color/iris</item>
        <item name="colorPrimary">@color/iris</item>
        <item name="colorPrimaryDark">@color/iris</item>
        <item name="actionOverflowButtonStyle">@style/Widget.WeiJu.ActionButton.Overflow</item>
        <item name="actionOverflowMenuStyle">@style/Widget.WeiJu.PopupMenu.Overflow</item>
        <item name="android:popupMenuStyle">@style/Widget.WeiJu.PopupMenu</item>
        <item name="android:foregroundTintMode">multiply</item>
        <item name="android:foregroundTint">@color/transparent_80</item>
        <item name="snackbarStyle">@style/Widget.WeiJu.Snackbar</item>
        <item name="colorBackgroundFloating">@color/base</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.WeiJu</item>
        <item name="android:selectableItemBackground">@drawable/selection_background</item>
        <item name="rippleColor">@color/highlight_low</item>
        <item name="itemRippleColor">@color/highlight_low</item>
        <item name="selectableItemBackgroundBorderless">@drawable/selection_background</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_bar_thumb</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scroll_bar_thumb</item>
    </style>

    <style name="PreferenceThemeOverlay.WeiJu">
        <item name="preferenceStyle">@style/Preference.Material.WeiJu</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category.Material.WeiJu</item>
    </style>

    <style name="Preference.Material.WeiJu">
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.Category.Material.WeiJu">
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Widget.WeiJu.Snackbar" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/surface</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="ShapeAppearanceOverlay.WeiJu.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.WeiJu.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/text</item>
    </style>

    <style name="Widget.WeiJu.PopupMenu.Overflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="Widget.WeiJu.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="Widget.WeiJu.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/subtle</item>
        <item name="android:indeterminateTintMode">multiply</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TextAppearance.WeiJu.Toolbar.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/jetbrains_mono_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Dialog.WeiJu" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorAccent">@color/iris</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="Widget.WeiJu.LienarProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackColor">@color/transparent_100</item>
        <item name="indicatorColor">@color/overlay</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Widget.CardView.Outlined" parent="">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/cardview_outline_background</item>
    </style>

</resources>
